{
  "name": "app",
  "author": "Cameron Vargas",
  "version": "0.1.0",
  "description": "Portfolio site with Django + React-Redux",
  "license": "MIT",
  "repository": "portfolio_site",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "eslint": "eslint src/**/*.js --ignore-pattern node_modules/",
    "sasslint": "sass-lint -v -q",
    "htmlhint": "htmlhint",
    "lint": "npm run eslint & npm run sasslint & npm run htmlhint",
    "build:prod": "npm run clean && webpack --env production",
    "build:dev": "npm run clean && webpack --env development",
    "buildwatch": "npm run clean && webpack --progress --colors --watch --env development",
    "buildwatch:prod": "npm run clean && webpack --progress --colors --watch --env production",
    "serve": "webpack-dev-server --config ./webpack/dev.js",
    "start": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "npm run test -- --watch",
    "webpack": "webpack --progress"
  },
  "jest": {
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupTestFrameworkScriptFile": "./setupTests.js"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.2.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-minify": "^0.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bulma": "^0.9.0",
    "css-loader": "^3.6.0",
    "detect-browser": "^2.4.0",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^21.2.1",
    "jsdom": "^8.1.0",
    "lodash": "^4.17.17",
    "mini-css-extract-plugin": "^0.9.0",
    "moxios": "^0.4.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "react-addons-test-utils": "^0.14.7",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.3.0",
    "sass": "^1.26.10",
    "sass-lint": "^1.12.1",
    "sass-loader": "^9.0.2",
    "sinon": "^4.0.0",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.6",
    "webpack": "^4.43.0",
    "webpack-bundle-tracker": "^0.2.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.1.11",
    "webpack-merge": "^5.0.9"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-preset-stage-1": "^6.1.18",
    "font-awesome": "^4.7.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^4.4.8",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  }
}
